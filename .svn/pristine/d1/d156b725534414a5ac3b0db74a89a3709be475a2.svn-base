name: lookingglass
version: 1
handle:
- compress:  if ( out_header["Content-type"]=="text/css" ) compress
- compress:  if ( out_header["Content-type"]=="text/javascript" ) compress
- compress:  if ( out_header["Content-type"]=="application/javascript" ) compress
- compress:  if ( out_header["Content-type"]=="text/plain" ) compress
- rewrite: if(!is_dir() && !is_file() && path ~ "/") goto "/index.php?%{QUERY_STRING}"

cron:
	- description: OneAsiaHost到中国电信
	url: /collect/oneasiahost_ct
	schedule: every 30 mins
	
	- description: OneAsiaHost到中国联通
	url: /collect/oneasiahost_cu
	schedule: every 30 mins
	
	- description: OneAsiaHost到中国移动
	url: /collect/oneasiahost_cmcc
	schedule: every 30 mins

	- description: 新力讯到中国电信
	url: /collect/sunnyvision_ct
	schedule: every 30 mins

	- description: 新力讯到中国联通
	url: /collect/sunnyvision_cu
	schedule: every 30 mins

	- description: 新力讯到中国移动
	url: /collect/sunnyvision_cmcc
	schedule: every 30 mins
	
