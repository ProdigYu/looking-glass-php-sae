	public function timeline()
	{
		$timelinearr = array();
		if(intval(date("i")) > 35 || intval(date("i")) <=15 )
		{
			for($i = 1; $i <= 12; $i++)
			{
				if($i % 2 == 1)
				{
					$timelinearr[$i] = date("H", strtotime("-" . 30 * $i . " minutes")) . ":30";
				}else{
					$timelinearr[$i] = date("H", strtotime("-" . 30 * $i . " minutes")) . ":00";
				}
			}
		}else{
			if(intval(date("i")) > 15 || intval(date("i")) <=35)
			{	
				for($i = 1; $i <= 12; $i++)
				{
					if($i % 2 == 1)
					{
						$timelinearr[$i] = date("H", strtotime("-" . 30 * $i . " minutes")) . ":00";
					}else{
						$timelinearr[$i] = date("H", strtotime("-" . 30 * $i . " minutes")) . ":30";
					}
				}
			}
		}
		//$timelinearr = array_reverse($timelinearr);
		
		$xml = new SimpleXMLElement('<chart/>');
		$categories = $xml->addChild('categories');
		for($j = 0; $j < count($timelinearr); $j++)
		{
			$categories -> addChild('item', $timelinearr[$j - 1]);
		}
		header('Content-type: text/xml');
		echo $xml->asXML();
	}

