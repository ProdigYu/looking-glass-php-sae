define("URL_ABOVENET", "http://lg.zayo.com/lg.cgi");
define("REFERER_ABOVENET", "http://lg.zayo.com/lg.cgi");
define("URL_GBLX", "http://ipstats.globalcrossing.net/cgi-bin/lg/lg.cgi");
